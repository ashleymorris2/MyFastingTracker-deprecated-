<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="?pageBackground"
    android:id="@+id/relative1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_background"
        android:id="@+id/relativeLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"

        android:focusableInTouchMode="false"
        android:minHeight="48dp"
        android:paddingBottom="8dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="true"
            android:id="@+id/linearLayout"
            android:weightSum="2">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/reminder_linear"
                android:baselineAligned="false"
                android:measureWithLargestChild="false"
                android:weightSum="2"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Monday"
                    android:id="@+id/item_text_reminderday"
                    style="?textRegular"
                    android:textSize="24sp"
                    android:autoText="false"
                    android:gravity="left"
                    android:layout_weight="1"
                    android:singleLine="false"
                    android:focusableInTouchMode="false"
                    android:textColor="@color/Light_Accent" />

                <Switch
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/switch_reminder_toggle"
                    android:checked="false"
                    android:layout_weight="1"
                    android:focusableInTouchMode="false"
                    android:focusable="false"
                    android:gravity="center_vertical" />


            </LinearLayout>
            <View
                style="?dividerStyle"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginBottom="16dp"
                android:background="#0c000000" />


        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout3"
            android:gravity="left"
            android:layout_below="@+id/linearLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="8dp">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?textRegular"
                android:text="16"
                android:id="@+id/item_text_fasting_duration"
                android:textSize="14dp"
                android:focusableInTouchMode="false"
                android:textColor="@android:color/darker_gray"
                android:gravity="center" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?textRegular"
                android:text="Hours"
                android:id="@+id/text_hours"
                android:textSize="14sp"
                android:focusableInTouchMode="false"
                android:textColor="@color/transparent_black"
                android:gravity="center_vertical|bottom" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout4"
            android:gravity="right"
            android:layout_below="@+id/linearLayout"
            android:layout_toRightOf="@+id/linearLayout3"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="8dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout2"
                android:gravity="right"
                android:layout_marginBottom="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="From: "
                    style="?textRegular"
                    android:id="@+id/textView5"
                    android:textSize="14sp"
                    android:singleLine="true"
                    android:autoText="false"
                    android:focusableInTouchMode="false"
                    android:textIsSelectable="false"
                    android:textColor="@color/transparent_black"
                    android:gravity="right" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20:00"
                    android:id="@+id/item_text_start_datetime"
                    android:textSize="14sp"
                    android:singleLine="true"
                    android:editable="false"
                    android:textAppearance="?textRegular"
                    android:autoText="false"
                    android:focusableInTouchMode="false"
                    android:gravity="right"
                    android:textColor="@android:color/darker_gray" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/linearLayout"
                android:gravity="right">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Until: "
                    android:id="@+id/textView7"
                    android:textSize="14sp"
                    android:singleLine="true"
                    android:autoText="false"
                    android:focusableInTouchMode="false"
                    android:textColor="@color/transparent_black"
                    android:gravity="bottom|right" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?textRegular"
                    android:text="13:00"
                    android:id="@+id/item_text_end_datetime"
                    android:textSize="14sp"
                    android:singleLine="true"
                    android:autoText="false"
                    android:focusableInTouchMode="false"
                    android:gravity="bottom|right"
                    android:textColor="@android:color/darker_gray" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>