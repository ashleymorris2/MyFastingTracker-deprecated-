<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.avaygo.myfastingtracker.TimerStartedFragment"
    android:id="@+id/main2"
    android:paddingLeft="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_horizontal_margin"
    android:gravity="fill_horizontal|fill_vertical"
    style="?pageBackground">


    <Button
        android:layout_width="85sp"
        android:layout_height="48dp"
        android:text="@string/btnStop"
        android:id="@+id/breakFast_button"
        style="@style/AppTheme"
        android:singleLine="false"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/redbutton"
        android:textColor="@color/Clouds"
        android:textSize="18sp"
        android:typeface="normal" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:weightSum="2">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:gravity="right">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="End"
                android:id="@+id/end"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="right"
                android:layout_weight="1"
                android:textAppearance="?textRegular" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?textRegular"
                android:text="Thu - 22:00"
                android:id="@+id/end_time"
                android:paddingTop="1dp"
                android:textSize="14sp"
                android:gravity="right"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout4"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/linearLayout"
            android:layout_weight="1"
            android:layout_marginLeft="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?textTimer"
                android:text="Start"
                android:id="@+id/start"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="left"
                android:layout_weight="1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?textRegular"
                android:text="22:00"
                android:id="@+id/start_time"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:paddingTop="1dp"
                android:layout_gravity="left"
                android:gravity="left"
                android:layout_weight="1"
                android:textSize="14sp" />

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:id="@+id/clock_relative"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dip">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/clock_linear"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="90dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:59"
                android:id="@+id/txt_time_HoursMins"
                android:textSize="70sp"
                android:gravity="center"
                android:typeface="normal"
                android:textAppearance="?textTimer" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?textTimer"
                android:text=":59"
                android:id="@+id/txt_time_seconds"
                android:layout_gravity="center_vertical"
                android:gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="false"


            android:gravity="center"
            android:id="@+id/completed_linear"
            android:layout_below="@+id/clock_linear"
            android:layout_alignRight="@+id/clock_linear"
            android:layout_alignEnd="@+id/clock_linear"
            android:layout_alignLeft="@+id/clock_linear"
            android:layout_alignStart="@+id/clock_linear">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Completed"
                android:id="@+id/textView2"
                android:layout_above="@+id/txt_FastingDuration"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textSize="14sp"
                android:typeface="normal"
                android:textAppearance="?textRegular" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1%"
                android:id="@+id/txt_completed"
                android:layout_below="@+id/textView2"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:paddingTop="1dp"
                android:textAppearance="?textRegular" />

        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="24 Hours"
            android:id="@+id/txt_FastingDuration"
            android:paddingTop="1dp"
            android:gravity="center_horizontal"
            android:layout_marginTop="64dp"
            android:textSize="14sp"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/clock_linear"
            android:layout_alignEnd="@+id/clock_linear"
            android:layout_alignLeft="@+id/clock_linear"
            android:layout_alignStart="@+id/clock_linear"
            android:textAppearance="?textRegular" />

        <de.passy.holocircularprogressbar.HoloCircularProgressBar
            android:id="@+id/holoCircularProgressBar1"
            android:layout_width="wrap_content"
            android:layout_height="280dp"
            style="?circleProgress"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>


</RelativeLayout>
