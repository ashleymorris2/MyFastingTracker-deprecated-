<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.avaygo.myfastingtracker.activities.ReminderSettingActivity"
    style="?pageBackground"
    android:id="@+id/relative">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/card_background"
        android:layout_below="@+id/text_reminder_day"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/relativeLayout">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Monday"
                    android:id="@+id/text_reminder_day"
                    android:textSize="22sp"
                    android:textColor="@color/Peter_River" />
            </LinearLayout>

            <View style="?dividerStyle" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="4dp"
                android:clickable="true"
                android:gravity="center_horizontal"
                android:id="@+id/button_time_set"
                android:focusableInTouchMode="false"
                android:weightSum="2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/textView"
                    android:text="Start: "
                    android:textSize="14sp"
                    android:gravity="center_vertical|right"
                    android:textColor="@color/transparent_black"
                    android:focusableInTouchMode="false"
                    android:focusable="false"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="20:00"
                    android:id="@+id/text_reminder_time"
                    android:textSize="14sp"
                    android:gravity="center_vertical|left"
                    android:focusableInTouchMode="false"
                    android:focusable="false"
                    android:textColor="@android:color/darker_gray"
                    android:layout_weight="1" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="?android:attr/listDivider" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="4dp"
                android:gravity="center_horizontal"
                android:layout_marginTop="4dp"
                android:clickable="true"
                android:id="@+id/button_duration_set"
                android:weightSum="2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Duration: "
                    android:id="@+id/textView2"
                    android:textSize="14sp"
                    android:gravity="center_vertical|right"
                    android:textColor="@color/transparent_black"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="18 Hours"
                    android:id="@+id/text_duration"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:textColor="@android:color/darker_gray"
                    android:layout_weight="1" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="?android:attr/listDivider" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical|center_horizontal"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="4dp"
                android:weightSum="2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="End: "
                    android:id="@+id/textView3"
                    android:textSize="14sp"
                    android:layout_marginLeft="8dp"
                    android:gravity="center|right"
                    android:textColor="@color/transparent_black"
                    android:textIsSelectable="false"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="13:00, Tuesday"
                    android:id="@+id/text_reminder_end"
                    android:textSize="14sp"
                    android:gravity="center|left"
                    android:textColor="@android:color/darker_gray"
                    android:layout_weight="1" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="2"
        android:layout_marginTop="8dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Discard"
            android:id="@+id/button_cancel2"
            android:layout_weight="1"
            android:layout_marginRight="4dp"
            android:layout_gravity="left"
            android:background="@drawable/cancel_button2"
            android:textColor="@color/Clouds"
            android:visibility="invisible" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Done"
            android:id="@+id/buton_save"
            android:layout_marginLeft="4dp"
            android:background="@drawable/light_theme_button"
            android:layout_weight="1"
            android:layout_gravity="right"
            android:textColor="@color/Clouds"
            android:visibility="invisible" />
    </LinearLayout>

</RelativeLayout>
