<resources xmlns:android="http://schemas.android.com/apk/res/android">


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat"></style>


    <!--==============================================================================
      Light Application Style
   ===============================================================================-->


    <style name="AppTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.StatusBar.Title">
        <item name="android:textColor">@color/Clouds</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="title_font_light">
        <item name="android:textColor">#ff424242</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="font_light" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#ff424242</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="font_light_coloured" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/Peter_River</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="timer_font_light" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#ff424242</item>
    </style>

    <style name="button_font_light" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/Peter_River</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="background_light">
        <item name="android:background">#ffe0e0e0</item>
    </style>

    <style name="divider_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/Peter_River</item>
    </style>

    <style name="CircularProgressBar_light">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="stroke_width">5dp</item>
        <item name="progress" format="float">0.1</item>
        <item name="progress_color">@color/Peter_River</item>
        <item name="progress_background_color">#bdc3c7</item>
        <item name="marker_visible">true</item>
        <item name="thumb_visible">true</item>
    </style>

    <style name="CircularSeekBar_light">
        <item name="circle_color">#bdc3c7</item>
        <item name="circle_progress_color">#2980b9</item>
        <item name="pointer_color">#34495e</item>
        <item name="pointer_halo_color">#2980b9</item>
        <item name="pointer_halo_color_ontouch">#b334495e</item>
        <item name="pointer_alpha_ontouch">255</item>
    </style>

    <style name="CustomAccentOverlay" parent="ThemeOverlay.AppCompat">
    <item name="android:color">@color/Alizarin</item>
</style>

    <style name="Button" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/Alizarin</item>
    </style>

    <style name="RedButton" parent="Widget.AppCompat.Button">
        <item name="android:colorAccent">@color/red</item>
        <item name="colorButtonNormal">@color/red</item>
        <item name="android:colorButtonNormal">@color/red</item>
    </style>


</resources>